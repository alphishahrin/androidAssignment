<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bground1"
    android:orientation="vertical"
    android:padding="25dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buttons">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bground2_text"
        android:textColor="#FEFBFC"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:textSize="60sp"
        android:layout_marginBottom="40dp"
        />
    <Button
        android:id="@+id/bgroung2Button1Id"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:textColor="#FEFBFC"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/button_bground2"
        />
    <Button
        android:id="@+id/bgroung2Button2Id"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Distance"
        android:textColor="#FEFBFC"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/button_bground2"
        />
    <Button
        android:id="@+id/bgroung2Button3Id"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Currency"
        android:textColor="#FEFBFC"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/button_bground2"
        />

</LinearLayout>